<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/pie_chart_width"
    android:layout_height="@dimen/pie_chart_width"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:paddingTop="@dimen/std_short_margin"
        android:layout_marginStart="@dimen/std_margin"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/chartIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/chartName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/std_margin"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/std_short_margin"
        android:orientation="vertical">
        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/circularChart"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="@dimen/pie_chart_width"
        android:layout_height="@dimen/pie_chart_width"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/std_short_med_margin"
        android:background="@drawable/circle_bg"
        android:progressDrawable="@drawable/circle" />

</androidx.cardview.widget.CardView>